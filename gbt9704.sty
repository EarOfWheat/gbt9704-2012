% 份号 / 密级 / 紧急程度（顶格左上）
\NewDocumentCommand{\fenhao}{O{} O{} O{}}{%
  % usage: \fenhao[份号][密级][紧急]
  \noindent
  \begin{minipage}[t]{0.33\textwidth}
    \raggedright \fontsize{12pt}{12pt}\selectfont #1
  \end{minipage}%
  \begin{minipage}[t]{0.33\textwidth}
    \raggedright \fontsize{12pt}{12pt}\selectfont #2
  \end{minipage}%
  \begin{minipage}[t]{0.33\textwidth}
    \raggedright \fontsize{12pt}{12pt}\selectfont #3
  \end{minipage}\par\vspace{6pt}
}

% 联合行文：并列发文机关（居中上方，多个时平均分配）
\NewDocumentCommand{\lianhe}{m}{%
  \begin{center}
    {\CJKfamily{GBTtitle}\textcolor{red}{\fontsize{\gbt@titlefontsize}{\gbt@titlefontsize}\selectfont #1}}
  \end{center}\vspace{3mm}
}

